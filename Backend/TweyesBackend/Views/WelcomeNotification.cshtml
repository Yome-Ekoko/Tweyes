@using System.Threading.Tasks
@model TweyesBackend.Core.DTO.Request.WelcomeEmailTemplateRequest
@{
    Layout = "_LayoutMail";

}
<p style="font-family: 'Inter', sans-serif; margin: 0; margin-bottom: 24px;">
    Dear @Model.Name,
</p>
<p style="font-family: 'Inter', sans-serif; margin: 0; margin-bottom: 24px;">
    Welcome to the Coronation Portal Platform.
</p>
<p style="font-family: 'Inter', sans-serif; margin: 0; margin-bottom: 24px;">
    Username: @Model.UserName
</p>
<p style="font-family: 'Inter', sans-serif; margin: 0; margin-bottom: 24px;">
    Use the link below to access the platform and login.
</p>
<table cellpadding="0" cellspacing="0" role="presentation">
    <tr>
        <td
            style="background-color: #21386d; padding-left: 26px; padding-right: 26px; padding-top: 12px; padding-bottom: 12px; font-family: Inter, -apple-system, 'Segoe UI', sans-serif;">
            <a href=@Model.Url
                style="font-family: 'Inter', sans-serif; display: block; font-size: 14px; font-weight: 500; line-height: 100%; color: #ffffff; text-decoration: none;">
                Login
            </a>
        </td>
    </tr>
</table>
